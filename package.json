{
    "name": "xiaowanBlog",
    "title": "小豌先生的技术笔记",
    "author": "小豌先生 <xiao2683@gmail.com>",
    "version": "2.0.0",
    "description": "分享投资笔记、AI与生活随想 - 顺势而为，持续成长",
    "homepage": "https://xiaoallocinit.github.io/xiaowanBlog.github.io/",
    "repository": {
        "type": "git",
        "url": "https://github.com/xiaoallocinit/xiaowanBlog"
    },
    "bugs": "https://github.com/xiaoallocinit/xiaowanBlog/issues",
    "devDependencies": {
        "grunt": "~0.4.5",
        "grunt-contrib-less": "~0.11.4",
        "grunt-contrib-watch": "~0.6.1",
        "grunt-banner": "~0.2.3",
        "grunt-contrib-uglify": "~0.5.1"
    },
    "scripts": {
        "start": "bundle exec jekyll serve --livereload --open-url",
        "build": "bundle exec jekyll build",
        "serve": "bundle exec jekyll serve --livereload",
        "preview": "cd _site; python3 -m http.server 8020",
        "watch": "grunt watch & npm run serve",
        "clean": "bundle exec jekyll clean",
        "install": "bundle install",
        "update": "bundle update",
        "test": "bundle exec htmlproofer ./_site --disable-external",
        "deploy": "bundle exec jekyll build && git add . && git commit -m 'Deploy updates' && git push origin main",
        "dev": "npm run clean && npm run serve"
    },
    "keywords": [
        "blog",
        "jekyll",
        "github-pages",
        "投资",
        "AI",
        "技术",
        "生活",
        "apple-design"
    ],
    "license": "MIT",
    "engines": {
        "node": ">=14.0.0",
        "npm": ">=6.0.0"
    }
}
